<resources>

    <style name="button_text" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:background">@drawable/buttonshape</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="edit_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edittextshape</item>
        <item name="android:gravity">center|center_vertical|center_horizontal</item>
        <!-- <item name="android:textAlignment">center</item> -->
    </style>

    <style name="edit_text_mini">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:layout_margin">2sp</item>
        <item name="android:layout_width">@dimen/widthETmini</item>
        <item name="android:layout_height">@dimen/heightETmini</item>
        <item name="android:background">@drawable/edittextshape</item>
        <item name="android:gravity">center|center_vertical|center_horizontal</item>
    </style>

    <style name="text_view">
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textColor">@color/darkerblue</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="title">
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textColor">@color/darkblue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/borderMargins</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
