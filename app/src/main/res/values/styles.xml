<resources>

    <style name="text_menu" >
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textColor">@color/textDark</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="button_menu" >
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">130dp</item>
    </style>

    <style name="button_text" >
        <item name="android:textColor">@color/edit_text_after</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:background">@drawable/buttonshape</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="edit_text">
        <item name="android:textColor">@color/edit_text_after</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edittextshape</item>
        <item name="android:gravity">center|center_vertical|center_horizontal</item>
        <!-- <item name="android:textAlignment">center</item> -->
    </style>

    <style name="edit_text_mini">
        <item name="android:textColor">@color/edit_text_after</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:layout_margin">2sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/heightETmini</item>
        <item name="android:background">@drawable/edittextshape</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center|center_vertical|center_horizontal</item>
    </style>

    <style name="text_view">
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textColor">@color/textDark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="big_text_view">
        <item name="android:textSize">@dimen/bigText</item>
        <item name="android:textColor">@color/textDark</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="title">
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/borderMargins</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="checked_text_view">
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textColor">@color/textDark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:checkMark">?android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:checkable">true</item>
    </style>
    
    <style name="AppTheme.MyDialogTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>










</resources>
